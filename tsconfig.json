{
    "compilerOptions": {
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "ESNext",//use ESNext
        "target": "ES2022",
        "lib": [
            "es2022",
            "dom"
        ],
        "types": [
            "node",
            "chai",
            "webdriverio",
            "@wdio/globals/types",
            "expect-webdriverio",
            "@wdio/cucumber-framework"
        ],
        "skipLibCheck": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": false, // turn to false
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "tests",
        "wdio.conf.ts"
    ]
}